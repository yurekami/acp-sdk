{
  "name": "@anthropic/acp-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for Anthropic Communication Protocol (ACP)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "example:echo": "npx tsx examples/cli-client.ts \"npx tsx examples/echo-agent.ts\"",
    "example:file": "npx tsx examples/cli-client.ts \"npx tsx examples/file-agent.ts\"",
    "example:calculator": "npx tsx examples/cli-client.ts \"npx tsx examples/calculator-agent.ts\"",
    "example:advanced": "npx tsx examples/cli-client.ts \"npx tsx examples/advanced-agent.ts\""
  },
  "keywords": [
    "anthropic",
    "acp",
    "protocol",
    "jsonrpc",
    "sdk",
    "typescript",
    "mcp"
  ],
  "author": "Anthropic",
  "license": "MIT",
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.2",
    "@typescript-eslint/parser": "^8.19.2",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
